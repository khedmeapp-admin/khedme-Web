{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "allowJs": true, // Include JS files
    "checkJs": false, // Don't type-check JS (avoids 1000+ errors)
    "noEmit": true, // Don't output files
    "isolatedModules": true,
    "strict": false, // Disable strict type checks for JS
    "skipLibCheck": true,
    "baseUrl": ".", // For path mapping
    "paths": {
      "@/*": [
        "src/*"
      ] // Allows using "@/..." imports
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ], // Only include your source files
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
