{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "allowJs": true,           // Include JS files
    "checkJs": false,          // Don't type-check JS to avoid 1000+ errors
    "noEmit": true,            // Don't output files
    "isolatedModules": true,
    "strict": false,           // Disable strict checks for JS
    "skipLibCheck": true,
    "baseUrl": ".",            // Base path for @/ imports
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".next", "dist"]
}
